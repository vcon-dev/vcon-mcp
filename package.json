{
  "name": "vcon-mcp",
  "version": "1.0.2",
  "description": "MCP Server for IETF vCon - Open Source Core",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": "./dist/index.js",
    "./hooks": "./dist/hooks/index.js",
    "./types": "./dist/types/vcon.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsx watch src/index.ts",
    "test": "vitest",
    "test:compliance": "vitest run tests/vcon-compliance.test.ts",
    "test:console": "npx @modelcontextprotocol/inspector tsx src/index.ts",
    "lint": "eslint src/**/*.ts",
    "docs:dev": "vitepress dev docs",
    "docs:build": "vitepress build docs",
    "docs:preview": "vitepress preview docs",
    "prepublishOnly": "npm run build",
    "db:status": "tsx scripts/check-db-status.ts",
    "db:check": "tsx scripts/check-vcons.ts",
    "db:analyze": "tsx scripts/check-daily-counts.ts",
    "db:backup": "tsx scripts/backup-from-remote.ts",
    "db:backup:cli": "./scripts/backup-remote-cli.sh",
    "db:restore": "./scripts/restore-backup.sh",
    "load:s3": "tsx scripts/load-legacy-vcons.ts",
    "load:s3:recent": "tsx scripts/load-legacy-vcons.ts --hours=24",
    "load:s3:12h": "tsx scripts/load-legacy-vcons.ts --hours=12",
    "load:s3:1h": "tsx scripts/load-legacy-vcons.ts --hours=1",
    "load:local": "tsx scripts/load-vcons.ts",
    "load:vcons": "tsx scripts/load-legacy-vcons.ts --hours=48",
    "sync:vcons": "tsx scripts/load-legacy-vcons.ts --hours=48 --sync",
    "sync:vcons:12h": "tsx scripts/load-legacy-vcons.ts --hours=12 --sync",
    "embeddings:generate": "tsx scripts/embed-vcons.ts",
    "embeddings:generate:fast": "tsx scripts/embed-vcons.ts --limit=500 --provider=openai",
    "embeddings:generate:small": "tsx scripts/embed-vcons.ts --limit=50 --provider=openai",
    "embeddings:generate:continuous": "tsx scripts/embed-vcons.ts --continuous --limit=500 --provider=openai --delay=2",
    "embeddings:generate:backfill": "tsx scripts/embed-vcons.ts --continuous --limit=500 --provider=openai --delay=2 --oldest-first",
    "embeddings:backfill": "bash scripts/backfill-embeddings.sh",
    "embeddings:check": "tsx scripts/check-embedding-coverage.ts",
    "embeddings:check:sql": "psql $DATABASE_URL -f scripts/check-embedding-coverage.sql",
    "test:db": "tsx scripts/test-database-tools.ts",
    "test:mcp": "tsx scripts/test-mcp-tools.ts",
    "test:search": "tsx scripts/test-search-tools.ts",
    "test:search:quick": "tsx scripts/test-search-quick.ts",
    "analyze:indexes": "tsx scripts/analyze-search-indexes.ts",
    "test:tags": "tsx scripts/test-tags.ts",
    "test:tenant": "tsx scripts/test-tenant-isolation.ts",
    "migrate:rls": "tsx scripts/migrate-to-rls.ts",
    "migrate:remote": "tsx scripts/migrate-to-remote.ts",
    "util:s3-sync": "./scripts/backfill-s3-sync.sh"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "keywords": [
    "vcon",
    "mcp",
    "ietf",
    "supabase",
    "conversation",
    "plugin",
    "extensible"
  ],
  "author": "",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/vcon-dev/vcon-mcp.git"
  },
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.922.0",
    "@aws-sdk/credential-providers": "^3.927.0",
    "@modelcontextprotocol/sdk": "^1.19.1",
    "@opentelemetry/api": "^1.9.0",
    "@opentelemetry/auto-instrumentations-node": "^0.48.0",
    "@opentelemetry/exporter-logs-otlp-http": "^0.52.0",
    "@opentelemetry/exporter-metrics-otlp-http": "^0.52.0",
    "@opentelemetry/exporter-trace-otlp-http": "^0.52.0",
    "@opentelemetry/instrumentation": "^0.52.0",
    "@opentelemetry/sdk-logs": "^0.52.0",
    "@opentelemetry/sdk-node": "^0.52.0",
    "@opentelemetry/semantic-conventions": "^1.25.0",
    "@supabase/supabase-js": "^2.74.0",
    "dotenv": "^16.4.0",
    "ioredis": "^5.4.1",
    "p-limit": "^7.2.0",
    "redis": "^5.9.0",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@types/node": "^24.7.0",
    "@typescript-eslint/eslint-plugin": "^8.46.0",
    "@typescript-eslint/parser": "^8.46.0",
    "@vitest/coverage-v8": "^3.2.4",
    "eslint": "^9.37.0",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3",
    "vitepress": "^1.0.0",
    "vitest": "^3.2.4",
    "zod-to-json-schema": "^3.23.3"
  }
}
