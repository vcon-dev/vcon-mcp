{
  "name": "vcon-mcp",
  "version": "1.2.0",
  "description": "MCP Server for IETF vCon - Open Source Core",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": "./dist/index.js",
    "./hooks": "./dist/hooks/index.js",
    "./types": "./dist/types/vcon.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsx watch src/index.ts",
    "test": "vitest",
    "test:e2e": "vitest run --config vitest.config.e2e.ts",
    "test:compliance": "vitest run tests/vcon-compliance.test.ts",
    "test:console": "npx @modelcontextprotocol/inspector tsx src/index.ts",
    "lint": "eslint src/**/*.ts",
    "docs:dev": "vitepress dev docs",
    "docs:build": "vitepress build docs",
    "docs:preview": "vitepress preview docs",
    "prepublishOnly": "npm run build",
    "db:status": "tsx scripts/check-db-status.ts",
    "db:check": "tsx scripts/check-vcons.ts",
    "db:analyze": "tsx scripts/check-daily-counts.ts",
    "db:backup": "tsx scripts/backup-from-remote.ts",
    "db:backup:cli": "./scripts/backup-remote-cli.sh",
    "db:restore": "./scripts/restore-backup.sh",
    "sync": "tsx scripts/sync-all.ts",
    "sync:continuous": "tsx scripts/sync-all.ts --sync",
    "sync:vcons": "tsx scripts/load-legacy-vcons.ts",
    "sync:embeddings": "tsx scripts/embed-vcons.ts --continuous --limit=500 --provider=openai --delay=2",
    "sync:tags": "tsx scripts/sync-all.ts --no-vcons --no-embeddings",
    "embeddings:check": "tsx scripts/check-embedding-coverage.ts",
    "test:db": "tsx scripts/test-database-tools.ts",
    "test:mcp": "tsx scripts/test-mcp-tools.ts",
    "test:search": "tsx scripts/test-search-tools.ts",
    "test:search:quick": "tsx scripts/test-search-quick.ts",
    "analyze:indexes": "tsx scripts/analyze-search-indexes.ts",
    "test:tags": "tsx scripts/test-tags.ts",
    "test:tenant": "tsx scripts/test-tenant-isolation.ts",
    "migrate:rls": "tsx scripts/migrate-to-rls.ts",
    "migrate:remote": "tsx scripts/migrate-to-remote.ts",
    "db:setup:e2e": "tsx scripts/setup-e2e-database.ts",
    "util:s3-sync": "./scripts/backfill-s3-sync.sh"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "keywords": [
    "vcon",
    "mcp",
    "ietf",
    "supabase",
    "conversation",
    "plugin",
    "extensible"
  ],
  "author": "",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/vcon-dev/vcon-mcp.git"
  },
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.922.0",
    "@aws-sdk/credential-providers": "^3.927.0",
    "@aws-sdk/s3-request-presigner": "^3.922.0",
    "@jsonld-ex/core": "^0.1.1",
    "@koa/cors": "^5.0.0",
    "@koa/router": "^13.1.0",
    "@modelcontextprotocol/sdk": "^1.19.1",
    "@opentelemetry/api": "^1.9.0",
    "@opentelemetry/auto-instrumentations-node": "^0.48.0",
    "@opentelemetry/exporter-logs-otlp-http": "^0.52.0",
    "@opentelemetry/exporter-metrics-otlp-http": "^0.52.0",
    "@opentelemetry/exporter-trace-otlp-http": "^0.52.0",
    "@opentelemetry/instrumentation": "^0.52.0",
    "@opentelemetry/sdk-logs": "^0.52.0",
    "@opentelemetry/sdk-node": "^0.52.0",
    "@opentelemetry/semantic-conventions": "^1.25.0",
    "@supabase/supabase-js": "^2.74.0",
    "dotenv": "^16.4.0",
    "fast-json-stable-stringify": "^2.1.0",
    "ioredis": "^5.4.1",
    "koa": "^3.1.1",
    "koa-bodyparser": "^4.4.1",
    "mongodb": "^7.1.0",
    "p-limit": "^7.2.0",
    "pino": "^10.1.0",
    "pino-pretty": "^13.1.3",
    "redis": "^5.9.0",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@types/fast-json-stable-stringify": "^2.1.2",
    "@types/koa": "^2.15.0",
    "@types/koa__cors": "^5.0.0",
    "@types/koa__router": "^12.0.4",
    "@types/koa-bodyparser": "^4.3.12",
    "@types/node": "^24.7.0",
    "@types/pino": "^7.0.4",
    "@typescript-eslint/eslint-plugin": "^8.46.0",
    "@typescript-eslint/parser": "^8.46.0",
    "@vitest/coverage-v8": "^3.2.4",
    "eslint": "^9.37.0",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3",
    "vitepress": "^1.0.0",
    "vitest": "^3.2.4",
    "zod-to-json-schema": "^3.23.3"
  }
}
