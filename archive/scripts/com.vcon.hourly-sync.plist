<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
    <!-- Job Label (unique identifier) -->
    <key>Label</key>
    <string>com.vcon.hourly-sync</string>
    
    <!-- Program to run -->
    <key>Program</key>
    <string>/Users/thomashowe/Documents/GitHub/vcon-mcp/scripts/sync-vcons-hourly.sh</string>
    
    <!-- Run every hour -->
    <key>StartInterval</key>
    <integer>3600</integer>
    
    <!-- Also run on load (when launchd starts) -->
    <key>RunAtLoad</key>
    <true/>
    
    <!-- Keep alive if it crashes -->
    <key>KeepAlive</key>
    <false/>
    
    <!-- Standard output/error logs -->
    <key>StandardOutPath</key>
    <string>/Users/thomashowe/Documents/GitHub/vcon-mcp/logs/vcon-sync-stdout.log</string>
    
    <key>StandardErrorPath</key>
    <string>/Users/thomashowe/Documents/GitHub/vcon-mcp/logs/vcon-sync-stderr.log</string>
    
    <!-- Environment variables -->
    <key>EnvironmentVariables</key>
    <dict>
        <key>PATH</key>
        <string>/usr/local/bin:/usr/bin:/bin:/usr/sbin:/sbin:/opt/homebrew/bin</string>
        <key>HOME</key>
        <string>/Users/thomashowe</string>
    </dict>
    
    <!-- Working directory -->
    <key>WorkingDirectory</key>
    <string>/Users/thomashowe/Documents/GitHub/vcon-mcp</string>
    
    <!-- Only run when laptop is awake and has network -->
    <key>StartOnMount</key>
    <false/>
    
    <!-- Nice value (lower priority) -->
    <key>Nice</key>
    <integer>1</integer>
    
    <!-- Throttle interval (seconds between restarts if it fails) -->
    <key>ThrottleInterval</key>
    <integer>300</integer>
</dict>
</plist>

